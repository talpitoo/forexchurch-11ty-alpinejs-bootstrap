<section class='py-section position-relative'>
    <div class='container-md container-max-xl'>
        <div class="row">
            <div class="col-lg-7 pe-lg-48px">
                <div x-data="{ open: 1 }" class="accordion mb-32px" id="wizardStep1">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button @click="open = open === 1 ? 0 : 1" class="accordion-button fs-2 fw-medium" :class="{'collapsed': open !== 1}" type="button" aria-expanded="open === 1" aria-controls="collapseOne">
                                <span class="circle-wrapper active me-3">1</span>Where do you live?
                            </button>
                        </h2>
                        <div :id="'collapseOne'" class="accordion-collapse collapse" :class="{'show': open === 1}" data-bs-parent="#wizardStep1">
                            <div class="accordion-body p-24px">
                                <span class="btn btn-underline p-0 mb-24px position-relative">
                                    <span>More info</span>
                                    <div class="position-absolute end-0 me-n24px">
                                        {% include "components/popover.njk" %}
                                    </div>
                                </span>

                                {# {% include "components/dropdown-countries-select.njk" %} #}
                                {% include "components/dropdown-countries.njk" %}

                                <p class="mb-0 text-end">
                                    <a href="#" class="btn btn-primary mt-16px">
                                        <span>Next</span>
                                        <svg class="ms-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-right"></use>
                                        </svg>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div x-data="{ open: 0 }" class="accordion mb-32px" id="wizardStep2">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button @click="open = open === 1 ? 0 : 1" class="accordion-button fs-2 fw-medium" :class="{'collapsed': open !== 1}" type="button" aria-expanded="open === 1" aria-controls="collapseOne">
                                <span class="circle-wrapper me-3">2</span>What do you want to trade?
                            </button>
                        </h2>
                        <div :id="'collapseOne'" class="accordion-collapse collapse" :class="{'show': open === 1}" data-bs-parent="#wizardStep1">
                            <div class="accordion-body p-24px">
                                <span class="btn btn-underline p-0 mb-24px position-relative">
                                    <span>More info</span>
                                    <div class="position-absolute end-0 me-n24px">
                                        {% include "components/popover.njk" %}
                                    </div>
                                </span>

                                <div class="d-flex flex-column row-gap-2 mb-32px">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption1">
                                        <label class="form-check-label" for="tradeOption1">
                                        Stocks and ETFs (e.g. Apple or Tesla shares)
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption2" checked>
                                        <label class="form-check-label" for="tradeOption2">
                                        Forex (e.g. EURUSD or GBPUSD)
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption3">
                                        <label class="form-check-label" for="tradeOption3">
                                        Options and futures (e.g. SPDR S&P 500 ETF Trust or Invesco QQQ Trust)
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption4">
                                        <label class="form-check-label" for="tradeOption4">Funds (e.g. BlackRock Equity Dividend Fund)
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption5">
                                        <label class="form-check-label" for="tradeOption5">Cryptos (e.g. Bitcoin or Ethereum)</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption6">
                                        <label class="form-check-label" for="tradeOption6">CFDs (e.g. Apple share CFD)</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="tradeOption7">
                                        <label class="form-check-label" for="tradeOption7">I donâ€™t know</label>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-16px">
                                    <a href="#" class="btn btn-outline-primary bg-white">
                                        <svg class="me-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-left"></use>
                                        </svg>
                                        <span>Back</span>
                                    </a>

                                    <div>
                                        <strong>2/</strong>
                                        <span class="text-muted">4 Steps</span>
                                    </div>

                                    <a href="{{ item.data.permalink }}" class="btn btn-primary">
                                        <span>Next</span>
                                        <svg class="ms-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div x-data="{ open: 0 }" class="accordion mb-32px" id="wizardStep3">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button @click="open = open === 1 ? 0 : 1" class="accordion-button fs-2 fw-medium" :class="{'collapsed': open !== 1}" type="button" aria-expanded="open === 1" aria-controls="collapseOne">
                                <span class="circle-wrapper me-3">3</span>What is your level with trading and investing?
                            </button>
                        </h2>
                        <div :id="'collapseOne'" class="accordion-collapse collapse" :class="{'show': open === 1}" data-bs-parent="#wizardStep1">
                            <div class="accordion-body p-24px">
                                <span class="btn btn-underline p-0 mb-24px position-relative">
                                    <span>More info</span>
                                    <div class="position-absolute end-0 me-n24px">
                                        {% include "components/popover.njk" %}
                                    </div>
                                </span>

                                <div class="d-flex flex-column row-gap-2 mb-32px">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingLevel" id="tradeLevelOption1">
                                        <label class="form-check-label" for="tradeLevelOption1">
                                        I am a <strong>beginner</strong> with no prior experience
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingLevel" id="tradeLevelOption2" checked>
                                        <label class="form-check-label" for="tradeLevelOption2">
                                        I have already carried out a <strong>few basic transactions</strong> before
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingLevel" id="tradeLevelOption3" checked>
                                        <label class="form-check-label" for="tradeLevelOption3">
                                        I <strong>have experience</strong> in multiple products and diverse trading strategies
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingLevel" id="tradeLevelOption4" checked>
                                        <label class="form-check-label" for="tradeLevelOption4">
                                            <strong>Completely confident</strong> with a lot of knowledge
                                    </label>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-16px">
                                    <a href="#" class="btn btn-outline-primary bg-white">
                                        <svg class="me-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-left"></use>
                                        </svg>
                                        <span>Back</span>
                                    </a>

                                    <div>
                                        <strong>3/</strong>
                                        <span class="text-muted">4 Steps</span>
                                    </div>

                                    <a href="{{ item.data.permalink }}" class="btn btn-primary">
                                        <span>Next</span>
                                        <svg class="ms-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div x-data="{ open: 0 }" class="accordion" id="wizardStep4">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button @click="open = open === 1 ? 0 : 1" class="accordion-button fs-2 fw-medium" :class="{'collapsed': open !== 1}" type="button" aria-expanded="open === 1" aria-controls="collapseOne">
                                <span class="circle-wrapper me-3">4</span>How much is your capital?
                            </button>
                        </h2>
                        <div :id="'collapseOne'" class="accordion-collapse collapse" :class="{'show': open === 1}" data-bs-parent="#wizardStep1">
                            <div class="accordion-body p-24px">
                                <span class="btn btn-underline p-0 mb-24px position-relative">
                                    <span>More info</span>
                                    <div class="position-absolute end-0 me-n24px">
                                        {% include "components/popover.njk" %}
                                    </div>
                                </span>

                                <div class="d-flex flex-column row-gap-2 mb-32px">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingCapital" id="tradeCapitalOption1">
                                        <label class="form-check-label" for="tradeCapitalOption1">
                                        Less than $100
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingCapital" id="tradeCapitalOption2" checked>
                                        <label class="form-check-label" for="tradeCapitalOption2">
                                        $100-$500
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingCapital" id="tradeCapitalOption3" checked>
                                        <label class="form-check-label" for="tradeCapitalOption3">
                                        $500-$1000
                                    </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tradingCapital" id="tradeCapitalOption4" checked>
                                        <label class="form-check-label" for="tradeCapitalOption4">
                                        More than $1000
                                    </label>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-16px">
                                    <a href="#" class="btn btn-outline-primary bg-white">
                                        <svg class="me-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-left"></use>
                                        </svg>
                                        <span>Back</span>
                                    </a>

                                    <div>
                                        <strong>4/</strong>
                                        <span class="text-muted">4 Steps</span>
                                    </div>

                                    <a href="{{ item.data.permalink }}" class="btn btn-primary">
                                        <span>Continue</span>
                                        <svg class="ms-1" aria-hidden="true" width="24" height="24">
                                            <use href="/img/icons/symbol/svg/sprite.css.svg#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                {% include "components/top-brokers-for-you.njk" %}
            </div>
        </div>
    </div>
</section>