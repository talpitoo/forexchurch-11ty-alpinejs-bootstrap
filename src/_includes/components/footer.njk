            <button 
              @click="footerDropdownOpen = !footerDropdownOpen"
              @resize.window="footerDropdownOpen = window.innerWidth >= 768"
              class="w-100 btn btn-link p-0">
              <h3 class="w-100 d-flex justify-content-between text-nowrap text-uppercase text-md-capitalize">
                <span>Top Brokers</span>
                <svg class="text-white d-md-none" aria-hidden="true" width="24" height="24">
