            <ul class="list-unstyled lh-lg mb-md-0 bg-primary-dark bg-md-transparent rounded-4 p-4 p-md-0" x-show="footerDropdownOpen || window.innerWidth >= 768">
              {% for item in topBrokersPages %}
                <li>
                  <a href="{{ item.data.permalink }}" class="text-nowrap">{{ item.data.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class='col-md-3 col-xl-2'>
