<div class="relative">
    <div class="swiper mx-n4" data-forexchurch-swiper>
        <div class="swiper-wrapper">
            {% for slide in slidesData %}
                <div class="swiper-slide px-4 pb-4">
                    <div class="forexchurch-tile break-inside-avoid-column">
                        <figure>
                            <div class="{{ slidesHeight }}">
                                {# NOTE: example of setting an individual pictureObject before including components/picture-example.njk #}
                                {% set pictureObject = {
                                    'webP': slide.webP,
                                    'webP2x': slide.webP2x,
                                    'jpg': slide.jpg,
                                    'jpg2x': slide.jpg2x
                                } %}
                                {% include "components/picture-example.njk" %}
                            </div>
                        </figure>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <button type="button" class="btn btn-link text-light swiper-button-prev -left-4.5 lg:-left-spacer-3">
        <span class="sr-only">previous slide</span>
        <svg class="w-4 h-4" aria-hidden="true" width="16" height="16">
            <use href="/img/icons/dist/sprite.svg#icon-caret-left"></use>
        </svg>
    </button>
    <button type="button" class="btn btn-link text-light swiper-button-next -right-4.5 lg:-right-spacer-3">
        <span class="sr-only">next slide</span>
        <svg class="w-4 h-4" aria-hidden="true" width="16" height="16">
            <use href="/img/icons/dist/sprite.svg#icon-caret-right"></use>
        </svg>
    </button>
</div>